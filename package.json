{
  "name": "assetguard-cmms",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "ng serve",
    "build": "ng build",
    "build:gh-pages": "ng build --configuration=github-pages",
    "preview": "ng serve --configuration=production",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss,json}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.2",
    "@angular/platform-browser": "^21.1.0",
    "@google/genai": "^1.38.0",
    "dompurify": "^3.2.4",
    "exceljs": "^4.4.0",
    "firebase": "^12.8.0",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.0",
    "vite": "^6.2.0"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
